{
  "project": "wikifundi",
  "services":[
    {
        "id": "wikifundi",
        "apps": [
            {
                "id": "wikifundi-fr",
                "domain": {
                    "uri": "wikifundi-fr.openzim.org"
                },
                "mem": 2048,
                "instances": 1,
                "image": "openzim/wikifundi-fr:latest",
                "port_mappings": [
                    {
                        "container_port": 80
                    }
                ],
                "env": {
                    "MIRRORING_OPTIONS": "-fm -s 5000000 -w 1024"
                },                
                "volumes": [
                    {
                        "container_path": "/var/www/data",
                        "size": "8GB"
                    }
                ]
            },
            {
                "id": "wikifundi-en",

                "domain": {
                    "uri": "wikifundi-en.openzim.org"
                },
                "mem": 2048,
                "instances": 1,
                "image": "openzim/wikifundi-en:latest",
                "port_mappings": [
                    {
                        "container_port": 80
                    }
                ],
                "env": {
                    "MIRRORING_OPTIONS": "-fm -s 5000000 -w 1024"
                },                
                "volumes": [
                    {
                        "container_path": "/var/www/data",
                        "size": "16GB"
                    }
                ]
            }
        ]
    }
  ]
}




